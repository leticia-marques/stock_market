{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                              
    "baseUrl": "./src",                                  
    "paths": {
      "@modules/*":["modules/*"],
      "@errors/*":["errors/*"],
      "@shared/*":["shared/*"],
      "@__mocks__/*": ["__mocks__/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true                                 
  }
}
